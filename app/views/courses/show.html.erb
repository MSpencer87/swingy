<h1>
  <%= @course.name %>
</h1>

<table class="courseTable">
 <tbody>
  <tr>
   <td>
    <h1 class="courseShow">
     <strong>Par</strong>
     <%= @course.par %>
    </h1>
   </td>
   <td rowspan="3">
    <p>
     <%= @course.notes %>
    </p>
   </td>
  </tr>
  <tr>
   <td>
    <h1 class="courseShow">
     <strong>Rating</strong>
     <%= @course.rating %>
    </h1>
   </td>
  </tr>
  <tr>
   <td>
    <h1 class="courseShow">
     <strong>Holes</strong>
     <%= @course.holes %>
    </h1>
   </td>
  </tr>
 </tbody>
</table>


<h1>Course Holes</h1>

<table align="center">
  <thead>
    <tr>
      <th>Number</th>
      <th>Par</th>
      <th>Distance</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course.course_holes.each do |course_hole| %>
      <tr>
        <td><%= course_hole.number %></td>
        <td><%= course_hole.par %></td>
        <td><%= course_hole.distance %></td>
        <td><%= course_hole.rating %></td>
        <td><%= link_to 'Notes', course_hole %></td>
        <td><%= link_to 'Edit', edit_course_hole_path(course_hole) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Edit Course Info', edit_course_path(@course) %> |
<%= link_to 'Back to Courses', courses_path %>

<br>

<h1>Noteable Rounds</h1>

<table align="center">
  <thead>
    <tr>
      <th>Score</th>
      <th>Date</th>
      <th>Golfer</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course.rounds.each do |round| %>
     <% if round.private == false %>
      <tr>
        <td><%= round.score %></td>
        <td><%= round.created_at.strftime(format='%D'.to_s) %></td>
        <td><%= round.user.name %></td>
        <td><%= link_to 'Show', round %></td>
      </tr>
     <% end %>
    <% end %>
  </tbody>
</table>      
