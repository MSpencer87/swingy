<%= link_to 'New Course', new_course_path %>
 | <%= link_to 'View Rounds', rounds_path %>
<h1>Courses</h1>
<table align="center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Par</th>
      <th>Rating</th>
      <th>Holes</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.par %></td>
        <td><%= course.rating %></td>
        <td><%= course.holes %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
