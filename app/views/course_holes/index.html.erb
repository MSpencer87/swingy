<p id="notice"><%= notice %></p>

<h1>Listing Course Holes</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Number</th>
      <th>Par</th>
      <th>Distance</th>
      <th>Rating</th>
      <th>Notes</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_holes.each do |course_hole| %>
      <tr>
        <td><%= course_hole.course_id %></td>
        <td><%= course_hole.number %></td>
        <td><%= course_hole.par %></td>
        <td><%= course_hole.distance %></td>
        <td><%= course_hole.rating %></td>
        <td><%= course_hole.notes %></td>
        <td><%= course_hole.course %></td>
        <td><%= link_to 'Show', course_hole %></td>
        <td><%= link_to 'Edit', edit_course_hole_path(course_hole) %></td>
        <td><%= link_to 'Destroy', course_hole, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

